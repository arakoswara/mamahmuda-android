<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
    <LinearLayout
            android:background="@drawable/border_bottom_grey"
            android:padding="@dimen/s_space"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        <LinearLayout
                android:paddingTop="@dimen/s_space"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/ic_blog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginLeft="@dimen/m_space"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/diagnosis"
                        android:paddingBottom="3dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/m_space"
                        android:textColor="@color/colorAccent"
                        android:text="@string/eq_penyakit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                    android:paddingTop="3dp"
                    android:textColor="#E91E63"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size"
                    android:text="@string/txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>