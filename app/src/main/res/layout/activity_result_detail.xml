<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".diagnosis.detail.ResultDetail"
        android:background="@color/blue_light">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                layout="@layout/status_bar"></include>

        <include
                layout="@layout/toolbar"></include>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:padding="@dimen/s_space"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingConstraints"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp">

                    <TextView
                            android:layout_marginBottom="@dimen/s_space"
                            android:text="Data anak"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_marginBottom="@dimen/s_space"
                            android:background="@drawable/white_background"
                            android:padding="@dimen/s_space"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_gravity="top"
                                android:padding="@dimen/s_space"
                                android:src="@drawable/ic_doctor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:layout_marginLeft="@dimen/s_space"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:textAllCaps="true"
                                    android:id="@+id/name"
                                    android:textSize="@dimen/m_space"
                                    android:text="@string/author"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:id="@+id/dob"
                                    android:textSize="@dimen/text_size"
                                    android:text="@string/eq_dob"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                            android:layout_marginBottom="@dimen/s_space"
                            android:text="Diagnosis"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_marginBottom="@dimen/s_space"
                            android:background="@drawable/white_background"
                            android:padding="@dimen/s_space"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/diagnosis_percent"
                                android:textStyle="bold"
                                android:text="21%"
                                android:textSize="@dimen/m_space"
                                android:textColor="@color/white"
                                android:background="@color/colorAccent"
                                android:layout_gravity="center"
                                android:padding="@dimen/s_space"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:layout_marginLeft="@dimen/s_space"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/name_medis"
                                    android:textSize="@dimen/m_space"
                                    android:text="Demam Typhoid"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:id="@+id/name_general"
                                    android:textSize="@dimen/text_size"
                                    android:text="Tifus"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                            android:layout_marginBottom="@dimen/s_space"
                            android:text="Keterangan"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_marginBottom="@dimen/s_space"
                            android:background="@drawable/white_background"
                            android:padding="@dimen/s_space"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_gravity="top"
                                android:padding="@dimen/s_space"
                                android:src="@drawable/ic_blog"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:layout_marginLeft="@dimen/s_space"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/description"
                                    android:textSize="@dimen/text_size"
                                    android:text="- abc \n- adsfadf \n- asffdaf"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                            android:layout_marginBottom="@dimen/s_space"
                            android:text="Saran penanganan dini"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_marginBottom="@dimen/s_space"
                            android:background="@drawable/white_background"
                            android:padding="@dimen/s_space"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_gravity="top"
                                android:padding="@dimen/s_space"
                                android:src="@drawable/ic_report"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:layout_marginLeft="@dimen/s_space"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/solution"
                                    android:textSize="@dimen/text_size"
                                    android:text="- abc \n- adsfadf \n- asffdaf"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                            android:layout_marginBottom="@dimen/s_space"
                            android:text="Catatan penting"
                            android:textStyle="bold"
                            android:textColor="#E91E63"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_marginBottom="@dimen/s_space"
                            android:background="@drawable/white_background"
                            android:padding="@dimen/s_space"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_gravity="top"
                                android:padding="@dimen/s_space"
                                android:src="@drawable/ic_medical_history"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:layout_marginLeft="@dimen/s_space"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:textSize="@dimen/text_size"
                                    android:text="Hasil diagnosis dari aplikasi ini hanya merupakan hasil perhitungan dari gejala-gejala yang sudah user pilih, ketidak akuratan dalam memilih gejala dapat menyebabkan ketidak akuratan dalam perhitungan untuk pengobatan dan hasil lebih akurat silahkan hubungi DOKTER."
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>